{
    "app-id": "org.flatpak.markdownedit",
    "runtime": "org.kde.Platform",
    "runtime-version": "6.3",
    "sdk": "org.kde.Sdk",
    "command": "markdownedit",
    "finish-args": [
        "--share=ipc",
        "--socket=x11",
        "--socket=wayland",
        "--filesystem=host",
        "--device=dri"
    ],
    "modules": [
        {
            "name": "markdownedit",
            "buildsystem": "cmake-ninja",
            "config-opts": ["-DFLATPAK", "-DCMAKE_BUILD_TYPE=RelWithDebInfo"],
            "sources": [
                {
                    "type": "git",
                    "url": "https://github.com/software-made-easy/MarkdownEdit.git"
                }
            ]
        }
    ]
}

